<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="120dp"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <View
        android:id="@+id/rv_item_view"
        android:layout_width="8dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/rv_item_tv_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Item 1"
        android:fontFamily="monospace"
        style="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toRightOf="@id/rv_item_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rv_item_tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Position : 0"
        android:fontFamily="monospace"
        style="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@id/rv_item_view"
        app:layout_constraintTop_toBottomOf="@id/rv_item_tv_headline"/>

</androidx.constraintlayout.widget.ConstraintLayout>